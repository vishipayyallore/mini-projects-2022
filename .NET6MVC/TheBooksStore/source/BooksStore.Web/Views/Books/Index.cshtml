@using BooksStore.Web.Core.Entities

@model IEnumerable<Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Books List</h1>

<table class="table table-striped shadow table-hover table-bordered border-primary">
    <thead>
        <tr class="text-primary text-center">
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PictureUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="text-center">
                    <img class="rounded-circle" src="@item.PictureUrl" title="@item.Title" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View Book</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-success">Purchase $ @item.Price</a>
                </td>
            </tr>
        }
    </tbody>
</table>


